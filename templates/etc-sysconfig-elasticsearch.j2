# {{ ansible_managed }}
################################
# Elasticsearch
################################
ES_HOME={{ es_home }}
{% if es_major_version == 1 %}
CONF_FILE={{ es_conf_dir }}/elasticsearch.yml
{% endif %}
CONF_DIR={{ es_conf_dir }}
DATA_DIR={{ es_data_dir }}
WORK_DIR={{ es_work_dir }}
LOG_DIR={{ es_log_dir }}
{% if es_major_version >=2 %}
PID_DIR={{ es_pid_dir }}
{% endif %}
ES_HEAP_SIZE={{ es_heap_size }}
{% if es_head_newsize is defined %}
ES_HEAP_NEWSIZE={{ es_heap_newsize }}
{% endif %}
{% if es_direct_size is defined %}
ES_DIRECT_SIZE= {{ es_direct_size }}
{% endif %}
{% if es_java_opts is defined %}
ES_JAVA_OPTS="{{ es_java_opts }}"
{% endif %}
{% if es_major_version >= 2 %}ES_{% endif %}RESTART_ON_UPGRADE={{ es_restart_on_upgrade | lower }}
{% if es_major_version >=2 %}
ES_GC_LOG_FILE={{ es_gc_log_file }}
{% endif %}

################################
# Elasticsearch service
################################
ES_USER={{ es_user }}
ES_GROUP={{ es_group }}
{% if es_major_version | int >= 2 and ansible_os_family == "RedHat" and ansible_distribution_major_version | int >= 7 %}
ES_STARTUP_SLEEP_TIME={{ es_startup_sleep_time }}
{% endif %}

################################
# System properties
################################
MAX_OPEN_FILES={{ es_max_open_files }}
MAX_LOCKED_MEMORY={{ es_max_locked_memory }}
MAX_MAP_COUNT={{ es_max_map_count }}
